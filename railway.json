{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "NIXPACKS"
    },
    "deploy": {
        "preDeployCommand": "bash deployment/railway-deploy.sh",
        "startCommand": "php artisan serve --host=0.0.0.0 --port=$PORT",
        "healthcheckPath": "/up",
        "healthcheckTimeout": 100,
        "restartPolicyType": "ON_FAILURE",
        "numReplicas": 1
    }
}